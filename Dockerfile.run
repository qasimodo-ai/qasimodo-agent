FROM debian:trixie-slim

# Install Chromium runtime dependencies
RUN apt-get update && apt-get install -y \
    libx11-6 \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

# Copy the executable
COPY dist/pyinstaller-test /app/pyinstaller-test

WORKDIR /app
RUN chmod +x pyinstaller-test

CMD ["./pyinstaller-test"]
